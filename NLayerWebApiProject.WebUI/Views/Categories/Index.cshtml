@using NLayerWebApiProject.WebUI.DTOs
@model IEnumerable<NLayerWebApiProject.WebUI.DTOs.CategoryDTO>
@{
    ViewData["Title"] = "Categories Page";
}

<div class="col-md-12">
    <div class="text-center">
        <h1 class="display-4">Kategoriler</h1>
    </div>
    <a asp-controller="Categories" asp-action="Add" class="btn btn-sm btn-outline-primary my-2">Yeni Kategori Ekle</a>
    <table class="table table-striped table-border">
        <thead>
        <tr>
            <th>#</th>
            <th>Adı</th>
            <th>İşlemler</th>
        </tr>
        </thead>
        <tbody>
        @foreach (CategoryDTO categoryDto in Model)
        {
            <tr>
                <td>@categoryDto.Id</td>
                <td>@categoryDto.Name</td>
                <td>
                    <a asp-controller="Categories" asp-action="Update" asp-route-id="@categoryDto.Id" class="btn btn-sm btn-outline-warning">Düzenle</a>
                    <button type="button" asp-controller="Categories" asp-action="Delete" asp-route-id="@categoryDto.Id" data-id="@categoryDto.Id" class="btn btn-sm btn-outline-danger categoryDelete">Sil</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
           $('.categoryDelete').on('click', function (e) {
              e.preventDefault();
              const id = $(this).data('id');
              $.ajax({
                url: '@Url.Action("Delete")',
                type: 'POST',
                data: {
                    id: id
                },
                success: function (response) {
                    window.location.reload();
                }
              });
           });
        });
    </script>
}
