@model IEnumerable<NLayerWebApiProject.WebUI.DTOs.ProductDTO>
@{
    ViewBag.Title = "Products";
}

<div class="col-md-12">
    <div class="text-center">
        <h1 class="display-4">Ürünler</h1>
    </div>
</div>
<a asp-controller="Products" asp-action="Add" class="btn btn-sm btn-outline-primary my-2">Yeni Ürün Ekle</a>
<table class="table table-striped table-border">
    <thead>
    <tr>
        <th>#</th>
        <th>Adı</th>
        <th>Fiyat</th>
        <th>Stok Adedi</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var productDto in Model)
    {
        <tr>
            <td>@productDto.Id</td>
            <td>@productDto.Name</td>
            <td>@productDto.Price</td>
            <td>@productDto.Stock</td>
            <td>
                <a asp-controller="Categories" asp-action="Update" asp-route-id="@productDto.Id" class="btn btn-sm btn-outline-warning">Düzenle</a>
                <button type="button" asp-controller="Categories" asp-action="Delete" asp-route-id="@productDto.Id" data-id="@productDto.Id" class="btn btn-sm btn-outline-danger categoryDelete">Sil</button>
            </td>
        </tr>
    }
    </tbody>
</table>